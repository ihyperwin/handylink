{  
  "name": "handlylink",  
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "display relation url on the margin of the web page when you are browsing.",  
  "browser_action": {
    "default_icon": "icon.png" ,
    "default_title": "handlylink",
    "default_popup": "popup.html"
  },
  "content_scripts": [
     {
       "matches": ["http://www.google.com.hk/*"],
       "css": ["default.css"],
       "js": ["addLayer.js"]
     }
  ]
} 